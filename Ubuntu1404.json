{
  "variables": {
    "source_image": ""
  },
  "builders": [{
    "type": "openstack",
    "source_image": "{{ user `source_image` }}",
    "ssh_username": "ubuntu",
    "openstack_provider": "nova",
    "image_name": "Packer1404",
    "flavor": "2"
  }],
  "provisioners": [{
    "type": "shell",
    "inline": ["sleep 5"]
  },
  {
    "type": "file",
    "source": "enableAutoUpdate.sh",
    "destination": "/home/ubuntu/enableAutoUpdate"
  },
  {
    "type": "file",
    "source": "installOpenStackTools.sh",
    "destination": "/home/ubuntu/installOpenStackTools"
  },
  {
    "type": "file",
    "source": "localSUS.sh",
    "destination": "/home/ubuntu/localSUS"
  },
  {
    "type": "file",
    "source": "motd.debian",
    "destination": "/home/ubuntu/motd"
  },
  {
    "type": "shell",
    "script": "UbuntuBootstrap.sh",
    "pause_before": "1s"
  }]
}

