{
  "variables": {
    "source_image": ""
  },
  "builders": [{
    "type": "openstack",
    "source_image": "{{ user `source_image` }}",
    "ssh_username": "debian",
    "openstack_provider": "nova",
    "image_name": "PackerD7",
    "flavor": "1"
  }],
  "provisioners": [{
    "type": "shell",
    "inline": ["sleep 5"]
  },
  {
    "type": "file",
    "source": "../packer_files/enableAutoUpdate.sh",
    "destination": "/home/debian/enableAutoUpdate"
  },
  {
    "type": "file",
    "source": "../packer_files/installOpenStackTools.sh",
    "destination": "/home/debian/installOpenStackTools"
  },
  {
    "type": "file",
    "source": "../packer_files/localSUS.sh",
    "destination": "/home/debian/localSUS"
  },
  {
    "type": "file",
    "source": "../packer_files/motd.generic",
    "destination": "/home/debian/motd"
  },
  {
    "type": "shell",
    "script": "../packer_files/UbuntuBootstrap.sh",
    "pause_before": "3s"
  }]
}

